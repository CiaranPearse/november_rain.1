<h1>Listing cusines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cusines.each do |cusine| %>
      <tr>
        <td><%= cusine.name %></td>
        <td><%= cusine.description %></td>
        <td><%= cusine.icon %></td>
        <td><%= cusine.image %></td>
        <td><%= link_to 'Show', cusine %></td>
        <td><%= link_to 'Edit', edit_cusine_path(cusine) %></td>
        <td><%= link_to 'Destroy', cusine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cusine', new_cusine_path %>
