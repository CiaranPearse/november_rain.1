<h1>Listing eases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eases.each do |ease| %>
      <tr>
        <td><%= ease.name %></td>
        <td><%= ease.description %></td>
        <td><%= ease.icon %></td>
        <td><%= ease.image %></td>
        <td><%= link_to 'Show', ease %></td>
        <td><%= link_to 'Edit', edit_ease_path(ease) %></td>
        <td><%= link_to 'Destroy', ease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ease', new_ease_path %>
