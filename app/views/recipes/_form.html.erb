<%= form_for @recipe, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :image, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_credit, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :image_credit, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :yeild, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :yeild, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prep, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :prep, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cook, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cook, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :total, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :ingredients, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :diet, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :diet, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :course, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :course, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ease, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ease, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :categories, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :categories, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tags, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :tags, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ratings, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :ratings, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :comments, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :facebook, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :twitter, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pinterest, :class => 'control-label col-md-2' %>
