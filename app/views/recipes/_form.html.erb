      <%= f.number_field :stumbleupon, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gplus, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :gplus, :class => 'text-field form-control' %>
